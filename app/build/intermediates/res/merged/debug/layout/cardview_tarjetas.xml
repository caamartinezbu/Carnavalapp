<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMañana"
    android:layout_height="@dimen/altura_tarjeta1"
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    card_view:cardCornerRadius="1dp"
    android:layout_marginTop="@dimen/activity_horizontal_cardview"
    android:layout_marginRight="@dimen/padding_tarjetaRL"
    android:layout_marginLeft="@dimen/padding_tarjetaRL"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="241dp"
            android:src="@drawable/side_nav_bar"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tvNombretarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Titulo_paisaje_mañana"
                android:layout_gravity="center_vertical"
                android:textSize="18dp"
                android:layout_marginRight="30dp"
                />
            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@mipmap/ic_like"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="7dp"
                />
            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@mipmap/ic_menupunto"
                android:layout_gravity="center_vertical"

                />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>