<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMaÃ±ana"
    android:layout_height="@dimen/altura_tarjeta1"
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    card_view:cardCornerRadius="4dp"
    android:layout_marginTop="@dimen/activity_horizontal_cardview"
    android:layout_marginRight="@dimen/padding_tarjetaRL"
    android:layout_marginLeft="@dimen/padding_tarjetaRL"
    android:background="#ccc"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#EFEFEF">

        <ImageView
            android:layout_width="73dp"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:id="@+id/ivFish"
            />

        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Evento"
                android:id="@+id/textFishName"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fechasmall"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Fecha"
                    android:id="@+id/textSize"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/textFishName"
                    android:layout_toRightOf="@id/ivFish"
                    android:layout_toEndOf="@id/ivFish"
                    android:textColor="#000"/></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_hora"
                    android:layout_marginLeft="16dp"/>





                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Hora"
                    android:padding="5dp"
                    android:id="@+id/textPrice"
                    android:textColor="@color/colorAccent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    /></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lugar"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Lugar"
                    android:id="@+id/textType"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/textSize"
                    android:layout_toRightOf="@id/ivFish"
                    android:textColor="#000"/>
            </LinearLayout>




        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>