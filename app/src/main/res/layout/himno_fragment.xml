<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

<ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:textAlignment="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/titilo_himno"
        android:layout_marginTop="@dimen/margin_top_scrollWview"
        android:textSize="20dp"
        android:textAlignment="center"
        android:padding="10dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/Primera_estrofa"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:padding="20dp"
        android:textSize="20dp"
        android:textIsSelectable="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Segunda_estrofa"
        android:textAlignment="center"
        android:padding="20dp"
        android:textSize="20dp"
        android:textIsSelectable="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Tercera_estrofa"
        android:textAlignment="center"
        android:padding="20dp"
        android:textSize="20dp"
        android:textIsSelectable="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Cuarta_estrofa"
        android:textAlignment="center"
        android:padding="20dp"
        android:textSize="20dp"
        android:textIsSelectable="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Quinta_estrofa"
        android:textAlignment="center"
        android:padding="20dp"
        android:textSize="20dp"
        android:textIsSelectable="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Sexta_estrofa"
        android:textAlignment="center"
        android:padding="20dp"
        android:textSize="20dp"
        android:textIsSelectable="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Septima_estrofa"
        android:textAlignment="center"
        android:padding="20dp"
        android:textSize="20dp"
        android:textIsSelectable="false" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/Octava_estrofa"
        android:textAlignment="center"
        android:padding="20dp"
        android:paddingBottom="30dp"
        android:textSize="20dp"
        android:textIsSelectable="false"
        />

</LinearLayout>
</ScrollView>


</RelativeLayout>