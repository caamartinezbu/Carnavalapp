<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMaÃ±ana"
    android:layout_height="@dimen/altura_tarjetanoticia"
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    card_view:cardCornerRadius="4dp"
    android:layout_marginTop="@dimen/activity_horizontal_cardview"
    android:layout_marginRight="@dimen/padding_tarjetaRL"
    android:layout_marginLeft="@dimen/padding_tarjetaRL"
    android:background="#ccc"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#fff">


        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="254dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Evento"
                android:id="@+id/textNombre"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Ver Mas..."
                android:padding="5dp"
                android:textSize="15dp"
                android:id="@+id/textCapitan"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="5dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                >


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="80dp"

                android:scaleType="fitXY"
                android:layout_height="80dp"
                android:id="@+id/imvPhoto"
               />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Fecha"
                android:textSize="15dp"
                android:id="@+id/textFecha_news"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                />
        </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>