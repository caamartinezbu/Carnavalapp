<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMaÃ±ana"
    android:layout_height="@dimen/altura_tarjeta1"
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    card_view:cardCornerRadius="4dp"
    android:layout_marginTop="@dimen/activity_horizontal_cardview"
    android:layout_marginRight="@dimen/padding_tarjetaRL"
    android:layout_marginLeft="@dimen/padding_tarjetaRL"
    android:background="#ccc"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#EFEFEF">

        <ImageView
            android:layout_width="120dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:id="@+id/imvPhoto"

            />

        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Evento"
                android:id="@+id/textNombre"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                >


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>